FROM python:3.8-bullseye

RUN useradd -ms /bin/bash jupyter
RUN pip install pipenv

WORKDIR /home/jupyter
USER jupyter
COPY Pipfile* .
RUN pipenv install

COPY *.ipynb .

EXPOSE 8888

CMD ["pipenv", "run", "jupyter-lab", "--no-browser", "--ip=0.0.0.0", "--ServerApp.token=''", "--ServerApp.password=''"]
